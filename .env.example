# Optional: DeepL translation
DEEPL_API_KEY=
DEEPL_API_URL=https://api-free.deepl.com/v2/translate
DEEPL_CACHE_MAX=2000
DEEPL_CACHE_TTL=86400
DEEPL_TIMEOUT=8
